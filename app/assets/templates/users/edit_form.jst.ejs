<form class="user-auth-form">

  <section class="input">
    <input type="text"
           name="user[email]"
           placeholder="Email"
           value="<%= user.email %>">
    <input type="password"
           name="user[password]"
           placeholder="Password">
    <input type="text"
           name="user[username]"
           placeholder="Username"
           value="<%= user.username %>">
  </section>
  <div class="error"></div>
  <button class="submit">Sign Up</button>
  <a href="#" class="demo-user">Try Demo User</a>
</form>
